---
import { Button } from '@/components/ui/button';
import { MobileDrawer } from '@/components/react/MobileDrawer';
import { Phone } from 'lucide-astro';
import { routes } from '@/routes/routes';

// Get current path to determine if we're on home page
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
---

<div class="absolute left-0 top-0 z-10 w-full">
  {/* Mobile Menu */}
  <MobileDrawer client:load />

  {/* Desktop Menu */}
  <div class="hidden gap-4 p-6 md:flex">
    {
      routes.map((route) => (
        <Button variant="link" size="sm">
          <a class="text-2xl text-white" href={route.path}>
            {route.label}
          </a>
        </Button>
      ))
    }
  </div>
</div>
